<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buddyware.treefrog.filesystem.view.CreateWizardController">
   <children>
      <VBox>
         <children>
            <StackPane fx:id="wizardStackPane" prefHeight="315.0" prefWidth="447.0">
               <children>
                  <Pane fx:id="page_two">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#afcdac" height="315.0" stroke="BLACK" strokeType="INSIDE" width="447.0" />
                        <VBox alignment="TOP_CENTER" prefHeight="315.0" prefWidth="427.0" spacing="15.0">
                           <children>
                              <Label prefWidth="320.0" text="Sync destination..." textAlignment="CENTER">
                                 <font>
                                    <Font name="DejaVu Sans Bold" size="25.0" />
                                 </font>
                                 <padding>
                                    <Insets left="15.0" top="25.0" />
                                 </padding>
                              </Label>
                              <ComboBox fx:id="comboSyncTargets" prefHeight="82.0" prefWidth="377.0" />
                           </children>
                        </VBox>
                     </children>
                  </Pane>
                  <Pane fx:id="page_one">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#8fc4e8" height="315.0" stroke="BLACK" strokeType="INSIDE" width="447.0" />
                        <VBox alignment="TOP_CENTER" prefHeight="315.0" prefWidth="447.0" spacing="15.0">
                           <children>
                              <Label prefWidth="320.0" text="Sync to somewhere..." textAlignment="CENTER">
                                 <font>
                                    <Font name="DejaVu Sans Bold" size="25.0" />
                                 </font>
                                 <padding>
                                    <Insets left="15.0" top="25.0" />
                                 </padding>
                              </Label>
                              <Button fx:id="buttonSyncToCloud" alignment="CENTER" mnemonicParsing="false" onAction="#chooseRemote" prefHeight="76.0" prefWidth="375.0" text="in the cloud" textAlignment="CENTER">
                                 <font>
                                    <Font name="DejaVu Sans" size="24.0" />
                                 </font>
                              </Button>
                              <Button fx:id="buttonSyncToComputer" alignment="CENTER" mnemonicParsing="false" onAction="#chooseLocal" prefHeight="76.0" prefWidth="375.0" text="on my computer" textAlignment="CENTER">
                                 <font>
                                    <Font name="DejaVu Sans" size="24.0" />
                                 </font>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </Pane>
               </children>
            </StackPane>
            <HBox alignment="CENTER_RIGHT" spacing="8.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#prevPage" text="&lt; Back" />
                  <Button mnemonicParsing="false" onAction="#nextPage" text="Next &gt;" />
                  <Button mnemonicParsing="false" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
